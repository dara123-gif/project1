apiVersion: apps/v1
kind: Deployment
metadata:
  name: proj1-web
  labels:
    app: proj1-web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: proj1-web
  template:
    metadata:
      labels:
        app: proj1-web
    spec:
      containers:
        - name: proj1-web
          image: darasing/web:v1                 # chnage dockerhubname / image name
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: proj1-web-service
spec:
  type: NodePort
  selector:
    app: proj1-web
  ports:
    - protocol: TCP
      port: 80          # Service Port
      targetPort: 80    # Container Port
      nodePort: 30080   # Port exposed externally (30000â€“32767 range)
